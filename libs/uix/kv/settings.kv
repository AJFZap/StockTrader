#:kivy 2.2.1

<Settings>:
    name: 'settings'
    MDBoxLayout:
        orientation: "vertical"
        size_hint: 1, 1
        spacing: 15

        MDTopAppBar:
            title: "Preferences and Settings"
            left_action_items: [["arrow-left", lambda x: app.root.set_current('main')]]

        MDGridLayout:
            size_hint: 1, .75
            cols: 2
            fontSize: '15sp'
            row_default_height: 50
            row_force_default: True
            spacing: 50

            ################# THE EMPTY LABELS ARE FOR SPACING PURPOSES ################

            MDLabel:
                text: ""
                # font_name: "fonts/Eurostile.ttf"
                size_hint: 1, 1
                size: self.texture_size
            
            MDLabel:
                text: ""
                # font_name: "fonts/Eurostile.ttf"
                size_hint: 1, 1
                size: self.texture_size

            MDLabel:
                text: "Language Selection:"
                # font_name: "fonts/Eurostile.ttf"
                size_hint: 1, 1
                size: self.texture_size
                font_size: self.parent.fontSize
                halign: 'center'

            Spinner:
                id: language_spinner
                text: 'Language'
                values: ["English", "Spanish", "Japanese"]
                # size_hint: .3, .3
                on_text: root.Selection(self)
                halign: 'center'
            
            MDLabel:
                text: ""
                # font_name: "fonts/Eurostile.ttf"
                size_hint: 1, 1
                size: self.texture_size
            
            MDLabel:
                text: ""
                # font_name: "fonts/Eurostile.ttf"
                size_hint: 1, 1
                size: self.texture_size
            
            MDLabel:
                text: "Currency Selection:"
                # font_name: "fonts/Eurostile.ttf"
                size_hint: 1, 1
                size: self.texture_size
                font_size: self.parent.fontSize
                halign: 'center'
            
            Spinner:
                id: currency_spinner
                text: 'Currency'
                values: ["USD", "Euro", "Argentine Peso"]
                size_hint: 1, 1
                on_text: root.Selection(self)
                halign: 'center'
            
            MDLabel:
                text: ""
                # font_name: "fonts/Eurostile.ttf"
                size_hint: 1, 1
                size: self.texture_size
            
            MDLabel:
                text: ""
                # font_name: "fonts/Eurostile.ttf"
                size_hint: 1, 1
                size: self.texture_size
        
        MDFillRoundFlatButton:
            text: "Wipe Saved Data"
            md_bg_color: "gray"
            size_hint: .5, .1
            pos_hint: {'center_x': .5, 'center_y': .5}
            on_press: root.WipeDialog()