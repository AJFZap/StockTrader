#:kivy 2.2.1

<Main>:
    name: 'main'

    userMoney: app.userMoney

    MDBottomNavigation:
        id: bottom_nav
        selected_color_background: None
        text_color_active: "lightgreen"
        panel_color: "green"
        imageSource: 'images/stocksBG-1.png'
        fontTitle: 'fonts/SF-Pro-Display-Bold.ttf'
        fontName: 'fonts/SF-Pro-Display-Regular.ttf'

        MDBottomNavigationItem:
            name: 'screen 1'
            text: 'General'
            icon: 'compass'
            MDScreen:
                MDBoxLayout:
                    orientation: 'vertical'
                    padding: 20
                    spacing: 20
                    fontSize: '30sp'

                    canvas:
                        Color:
                            rgba: 0.5, 0.5, 0.5, 1
                        Rectangle:
                            size: self.size
                            pos: self.pos
                            source: bottom_nav.imageSource

                    MDLabel:
                        text: "Current Rank:"
                        font_name: bottom_nav.fontTitle
                        halign: 'center'
                        font_size: '40sp'
                        outline_width: 2
                        outline_colour: (0, 0, 0, 1)
                        theme_text_color: "Custom"
                        text_color: "#D4D4D9"
                        size_hint: 1, .3
                        pos_hint:{'center_y': 1}
                    
                    MDLabel:
                        id: rank
                        text: ""
                        font_name: bottom_nav.fontName
                        halign: 'center'
                        font_size: '30sp'
                        outline_width: 2
                        outline_colour: (0, 0, 0, 1)
                        theme_text_color: "Custom"
                        text_color: "#D4D4D9"
                        size_hint: 1, .5
                        pos_hint:{'center_y': 1}
                    
                    MDRectangleFlatButton:
                        text: "Settings"
                        font_size: self.parent.fontSize
                        font_name: bottom_nav.fontName
                        theme_text_color: "Custom"
                        text_color: "#D4D4D9"
                        line_color: '#008000'
                        md_bg_color: '#008000'
                        size_hint: .8, .1
                        pos_hint: {'center_x': 0.5}
                        on_press: app.root.set_current('settings')
                    
                    MDRectangleFlatButton:
                        text: "Investing Guide"
                        font_size: self.parent.fontSize
                        font_name: bottom_nav.fontName
                        theme_text_color: "Custom"
                        text_color: "#D4D4D9"
                        line_color: '#008000'
                        md_bg_color: '#008000'
                        size_hint: .8, .1
                        pos_hint: {'center_x': 0.5}
                        on_press: app.root.set_current('guide')

        MDBottomNavigationItem:
            name: 'screen 2'
            text: 'Market'
            icon: 'cash'
            badge_icon: "numeric-6"
            MDScreen:
                MDBoxLayout:
                    orientation: 'vertical'
                    height: self.minimum_height

                    canvas:
                        Color:
                            rgba: 0.5, 0.5, 0.5, 1
                        Rectangle:
                            size: self.size
                            pos: self.pos
                            source: "images/stocksBG-3.png"

                ScrollView:
                    do_scroll_x: False
                    do_scroll_y: True
                    effect_cls: 'ScrollEffect'

                    MDBoxLayout:
                        orientation: 'vertical'
                        size_hint: 1, None
                        height: self.minimum_height

                        MDLabel:
                            text: f"Cash: $ {round(app.userMoney, 2)}"
                            font_name: bottom_nav.fontTitle
                            size_hint_y: None
                            pos_hint: {'center_x': .5, 'center_y': .5}
                            font_size: '30sp'
                            halign: 'center'

                        MDGridLayout:
                            cols: 2
                            padding: 20
                            spacing: 20
                            size_hint: 1, None
                            height: self.minimum_height
                            row_default_height: 400
                            row_force_default: True
                            fontSize: '20sp'
                            
                            MDCard:
                                orientation: 'vertical'
                                style: "outlined"
                                md_bg_color: (1/255,33/255,72/255,1)
                                radius: [dp(20), dp(20), dp(20), dp(20)]
                                padding: 10
                                spacing: 10
                                name: "AAPL"
                                screenGraph: "first"
                                posDF: app.randomRow # This holds the value of the position in the Data Frame, to be able to update the value.

                                MDLabel:
                                    id: ticker_o
                                    text: self.parent.name
                                    font_name: bottom_nav.fontName
                                    size_hint: 1, 1
                                    font_size: self.parent.parent.fontSize
                                    halign: 'center'
                                
                                MDLabel:
                                    id: stock_open_o
                                    text: f"Open: {app.openPrice[self.parent.name]}"
                                    font_name: bottom_nav.fontName
                                    size_hint: 1, 1
                                    font_size: self.parent.parent.fontSize
                                    halign: 'center'
                                
                                MDLabel:
                                    id: stock_price_o
                                    text: f"Price: {app.openPrice[self.parent.name]}"
                                    font_name: bottom_nav.fontName
                                    size_hint: 1, 1
                                    font_size: self.parent.parent.fontSize
                                    halign: 'center'
                                
                                MDLabel:
                                    id: stock_diff_o
                                    text: app.GetPrice(self)
                                    font_name: bottom_nav.fontName
                                    size_hint: 1, 1
                                    font_size: self.parent.parent.fontSize
                                    halign: 'center'
                                    markup: True
                                
                                MDRectangleFlatButton:
                                    text: "Buy Stock"
                                    font_name: bottom_nav.fontName
                                    theme_text_color: "Custom"
                                    text_color: "green"
                                    line_color: "green"
                                    pos_hint: {'center_x': 0.5}
                                    size_hint: 0.8, None
                                    on_release: app.BuyStock(self.parent.name)

                                MDRectangleFlatButton:
                                    text: "Sell Stock"
                                    font_name: bottom_nav.fontName
                                    theme_text_color: "Custom"
                                    text_color: "green"
