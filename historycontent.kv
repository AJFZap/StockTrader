#:kivy 2.2.1

<HistoryContent>:
    orientation: 'vertical'
    spacing: "15dp"
    size_hint_y: None
    height: "250dp"

    ScrollView:
        do_scroll_x: False
        do_scroll_y: True
        effect_cls: "ScrollEffect"

        GridLayout:
            id: all_trades
            cols: 1
            orientation: 'bt-rl'
            size_hint_y: None
            height: self.minimum_height
            halign: 'left'
            spacing: dp(40)
            padding: dp(20)
            fontSize: '30sp'